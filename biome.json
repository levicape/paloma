{
	"files": {
		"ignore": [
			"app/_protocols/**/*",
			"lambda.runtime.ts",
			"*.gen.ts",
			"cookie-store.server.ts",
			"cloudscape.*.css",
			"package.json",
			"package-lock.json",
			"**/package.json",
			"**/package-lock.json"		
		]
	},
	"linter": {
		"rules": {
			"complexity": {
				"noForEach": "off",
				"noUselessFragments": "off",
				"noStaticOnlyClass": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noUselessElse": "off",
				"noUnusedTemplateLiteral": "off"
			}
		}
	}
}
