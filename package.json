{
  "name": "@levicape/paloma",
  "version": "0.0.0-local.0",
  "author": "Pedro Cardona",
  "bin": {
    "@levicape/paloma": "module/cli/bin.mjs"
  },
  "config": {
    "packagemanager": "pnpm",
    "packageexecutor": "pnpm",
    "lintpaths": "./src ./examples"
  },
  "dependencies": {
    "@stricli/core": "^1.1.0",
    "better-sqlite3": "^11.6.0",
    "knex": "^3.1.0",
    "ksuid": "^3.0.0",
    "nanoid": "^5.0.9",
    "slugid": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "latest",
    "depcheck": "^1.4.7",
    "nexe": "4.0.0-rc.6",
    "publint": "^0.2.12",
    "syncpack": "^13.0.0",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    ".": "./module/harness/index.mjs",
    "./bootstrap": "./module/bootstrap/index.mjs",
    "./materials": "./module/materials/index.mjs",
    "./cli": "./module/cli/index.mjs",
    "./debug": "./module/debug/index.mjs",
    "./repository": "./module/repository/index.mjs"
  },
  "files": [
    ".github",
    "module"
  ],
  "license": "AGPL-3.0-only",
  "main": "module/harness/index.mjs",
  "packageManager": "pnpm@9.7.0+sha512.dc09430156b427f5ecfc79888899e1c39d2d690f004be70e05230b72cb173d96839587545d09429b55ac3c429c801b4dc3c0e002f653830a420fa2dd4e3cf9cf",
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "github:levicape/paloma",
  "scripts": {
    "build": "$npm_package_config_packageexecutor tsc",
    "clean": "rm -rf ./module",
    "clean:install": "rm -rf ./node_modules",
    "lint": "$npm_package_config_packageexecutor biome check $npm_package_config_lintpaths",
    "lint:format": "$npm_package_config_packageexecutor biome format --write $npm_package_config_lintpaths",
    "lint:unsafe": "$npm_package_config_packageexecutor biome check --write --unsafe $npm_package_config_lintpaths",
    "lint:write": "$npm_package_config_packageexecutor biome check --write $npm_package_config_lintpaths",
    "package:deps": "$npm_package_config_packageexecutor depcheck",
    "package:fix": "$npm_package_config_packageexecutor syncpack fix-mismatches",
    "package:format": "$npm_package_config_packageexecutor syncpack format",
    "package:update": "$npm_package_config_packageexecutor syncpack update",
    "prelint": "$npm_package_config_packageexecutor biome format $npm_package_config_lintpaths",
    "prepublish": "$npm_package_config_packageexecutor -y publint --strict",
    "pretest": "$npm_package_config_packagemanager run clean && $npm_package_config_packagemanager run build",
    "test": "$npm_package_config_packagemanager run test:unit && $npm_package_config_packagemanager run test:examples",
    "test:examples": "node --experimental-strip-types examples/basic.ts",
    "test:unit": "node --experimental-strip-types --test  \"module/**/*.test.(mjs|cjs|js)\""
  },
  "type": "module",
  "types": "module/harness/index.d.mts"
}
