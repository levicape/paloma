{
  "name": "@levicape/paloma",
  "author": "Pedro Cardona",
  "license": "AGPL-3.0-only",
  "main": "module/index.js",
  "types": "module/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./module/index.js",
    "./bootstrap": "./module/bootstrap/index.js",
    "./classified": "./module/classified/index.js",
    "./cli": "./module/cli/index.js",
    "./debug": "./module/debug/index.js",
    "./harness": "./module/harness/index.js",
    "./repository": "./module/repository/index.js"
  },
  "version": "0.0.0-local.0",
  "engines": {
      "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/levicape/paloma.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bin": {
    "@levicape/paloma": "module/cli/bin.js"
  },
  "files": [
    ".github",
    "src",
    "module",
    "examples"
  ],
  "scripts": {
    "prelint": "npx @biomejs/biome format ./src ./examples",
    "lint": "npx @biomejs/biome check ./src ./examples",
    "lint:format": "npx @biomejs/biome format --write ./src ./examples",
    "lint:write": "npx @biomejs/biome check --write ./src ./examples",
    "lint:unsafe": "npx @biomejs/biome check --write --unsafe ./src ./examples",
    "build": "npx tsc",
    "pretest": "npm run clean && npm run build",
    "test": "npm run test:unit && npm run test:examples",
    "test:unit": "node --experimental-strip-types --test  \"module/**/*.test.js\"",
    "test:examples": "node --experimental-strip-types examples/basic.ts",
    "clean": "rm -rf ./module",
    "clean:pack": "rm -rf ./paloma.alltest.repopack",
    "pack": "npx clean:pack && npx repopack --output ./paloma.alltest.repopack"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@stricli/core": "^1.1.0",
    "better-sqlite3": "^11.6.0",
    "knex": "^3.1.0",
    "ksuid": "^3.0.0",
    "nanoid": "^5.0.9",
    "nexe": "4.0.0-rc.6",
    "slugid": "^5.0.1"
  },
  "packageManager": "pnpm@9.7.0+sha512.dc09430156b427f5ecfc79888899e1c39d2d690f004be70e05230b72cb173d96839587545d09429b55ac3c429c801b4dc3c0e002f653830a420fa2dd4e3cf9cf"
}
